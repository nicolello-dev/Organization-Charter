// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Team {
  name            String     @id
  team_lead       String
  domain          String?
  domain_lead     String?
  tribe_area      String?
  tribe_area_lead String?
  tribe           String?
  tribe_lead      String?
  employees       Employee[]
}

model Employee {
  id              String     @id @default(uuid()) @db.Uuid
  name            String
  team            Team       @relation(fields: [teamName], references: [name])
  teamName        String
  functional_lead String?
  datapoint       Datapoint? @relation(fields: [datapointId], references: [id])
  datapointId     String?
}

model Datapoint {
  id        String     @id @default(uuid())
  createdAt DateTime   @default(now())
  employees Employee[]
}
